    <!-- DASH Diet Info -->
    <string name="dash_info_title">About the DASH Diet</string>
    <string name="dash_info_what">What is the DASH Diet?</string>
    <string name="dash_info_what_desc">DASH stands for Dietary Approaches to Stop Hypertension. It is a lifelong approach to healthy eating designed to help treat or prevent high blood pressure (hypertension).</string>
    <string name="dash_info_benefits">Key Benefits</string>
    <string name="dash_info_benefit_1">Lowers blood pressure</string>
    <string name="dash_info_benefit_2">Reduces cholesterol levels</string>
    <string name="dash_info_benefit_3">Improves insulin sensitivity</string>
    <string name="dash_info_benefit_4">Supports healthy weight</string>
    <string name="dash_info_benefit_5">Reduces risk of heart disease</string>
    <string name="dash_info_benefit_6">May lower cancer risk</string>
    <string name="dash_info_guidelines">DASH Guidelines</string>
    <string name="dash_info_guideline_1">Eat more fruits and vegetables</string>
    <string name="dash_info_guideline_2">Choose whole grains over refined</string>
    <string name="dash_info_guideline_3">Include fat-free or low-fat dairy</string>
    <string name="dash_info_guideline_4">Choose lean proteins (fish, poultry, beans)</string>
    <string name="dash_info_guideline_5">Limit sodium to 2,300mg daily (or 1,500mg)</string>
    <string name="dash_info_guideline_6">Reduce saturated fats and sweets</string>
    <string name="dash_info_guideline_7">Include nuts, seeds, and legumes</string>
    <string name="dash_info_daily_servings">Recommended Daily Servings</string>
    <string name="dash_info_grains">Grains: 6–8 servings</string>
    <string name="dash_info_vegetables">Vegetables: 4–5 servings</string>
    <string name="dash_info_fruits">Fruits: 4–5 servings</string>
    <string name="dash_info_dairy">Dairy (low-fat): 2–3 servings</string>
    <string name="dash_info_meat">Lean meat/fish: 6 or fewer servings</string>
    <string name="dash_info_nuts">Nuts/seeds/legumes: 4–5 per week</string>
    <string name="dash_info_fats">Fats/oils: 2–3 servings</string>
    <string name="dash_info_sweets">Sweets: 5 or fewer per week</string>

    <!-- Daily Tips -->
    <string name="tip_1">Try replacing table salt with herbs and spices for flavor.</string>
    <string name="tip_2">Aim for at least 4–5 servings of fruits and vegetables daily.</string>
    <string name="tip_3">Choose whole grains like brown rice, whole wheat, and oats.</string>
    <string name="tip_4">Snack on unsalted nuts instead of chips or crackers.</string>
    <string name="tip_5">Read nutrition labels and choose foods with less sodium.</string>
    <string name="tip_6">Include a serving of low-fat dairy like yogurt each day.</string>
    <string name="tip_7">Grill, bake, or steam food instead of frying.</string>
    <string name="tip_8">Drink water instead of sugary beverages.</string>
    <string name="tip_9">Add beans or lentils to soups and salads for extra fiber.</string>
    <string name="tip_10">Plan your meals ahead to make healthier choices.</string>

